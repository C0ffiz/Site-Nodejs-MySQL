
<section>
<div class="all-div">


  <h1>Clientes</h1>
  <br>
    {{#if emptyAlunos}}
      <p>Sem usuarios cadastrados</p>
      
    {{/if}}
    
    {{#each alunos}}
        <b>{{this.nome}}</b> - 
          <form action="/alunos/updatestatus" method="POST" style="display: inline;">
            <input type="hidden" name="id" value={{this.id}}>
            <input type="hidden" name="status" value={{this.status}}>
            <button type="submit" class="btn btn-success btn">
              {{#if this.status}}
                desabilitar
              {{else}}
                habilitar
              {{/if}}
            </button>
          </form>
          
          {{!-- <form action="/alunos/edit/{{this.id}}" style="display: inline;">
              <input type="submit" value="editar" />
          </form> --}}
          
          <form action="/alunos/remove" method="POST" style="display: inline;">
            <input type="hidden" name="id" value={{this.id}}>
            <button type="submit" class="btn btn-danger">
              excluir
            </button>
          </form>
          
          <button type="button" class="btn btn-primary"><a href="/alunos/edit/{{this.id}}" style="color: white; text-decoration: none;">editar</a></button>
          
      <hr>
    {{/each}}
    
    <button type="button" class="btn btn-dark"><a href="/alunos/add" style="text-decoration: none; color: white;">Add</a></button>
    
</div>
</section>

<style>
  section{
    width: 100%;
    background-color: rgb(255, 242, 225);
    text-align: center;
    justify-content: center;
  }
  .all-div{

    width: 520px;
    margin: auto;
    background-color: bisque;
    border-radius: 3ch;
    border-color: black;
    border-style: solid;
    border-width: 3px;
  }
</style>